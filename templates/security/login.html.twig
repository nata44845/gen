{% extends 'security.html.twig' %}

{% block headTitle %}Авторизация • Эверест124{% endblock %}

{% block pageContent %}

    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login
    {% if flagRegister is defined and flagRegister %} m-login--signup {% elseif flagRecovery is defined and flagRecovery %} m-login--forget-password {% else %} m-login--signin {% endif %}
     m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url({{ asset(templatePath ~ '/assets/app/media/img//bg/bg-3.jpg') }});">
        <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
            <div class="m-login__container">
                <div class="m-login__logo">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ asset('assets/images/logo.png') }}">
                    </a>
                </div>




    <div class="m-login__signin">
        <div class="m-login__head">
            <h3 class="m-login__title">
                Вход в личный кабинет
            </h3>
        </div>
        <form class="m-login__form m-form" action="{{ path('login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="form-group m-form__group">
                <input class="form-control m-input" type="email" placeholder="Email" name="login[email]" value="{{ lastEmail }}" autocomplete="off">
            </div>
            <div class="form-group m-form__group">
                <input class="form-control m-input m-login__form-input--last" type="password" placeholder="Password" name="login[password]">
            </div>
            <div class="row m-login__form-sub">
                <div class="col m--align-left m-login__form-left">
                    <label class="m-checkbox  m-checkbox--focus">
                        <input type="checkbox" name="login[remember]">
                        Запомнить меня
                        <span></span>
                    </label>
                </div>
            </div>
            <div class="m-login__form-action">
                <button id="m_login_signin_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                    Войти
                </button>
            </div>
        </form>
    </div>
            </div>
        </div>
    </div>

{% endblock %}

