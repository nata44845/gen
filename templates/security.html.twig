    {% block customJs %}
    {% endblock %}

<script>
    $(function () {
        $('#register-form').on('submit', function (e) {
            e.preventDefault();

            var $self = $(this);
            var data = $self.serialize();

            $.ajax({
                method: 'POST',
                url: '{{ path('register_validate') }}',
                data: data,
                success: function (response) {
                    if (!response.success && response.error) {
                        alert(response.error);
                    } else {
                        $self.off('submit');
                        $('#m_login_signup_submit').trigger('click');
                        // $self.off('submit');
                        // setTimeout(function() {
                        //     $self.submit();
                        // }, 500);
                    }
                }
            });
        });
    })
</script>

